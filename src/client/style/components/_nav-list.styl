.nav-list
  
  flex-column()
  display none
  
  width 100%
  padding 0;
  margin 0;
  list-style none;
  
  @media screen and (min-width: 600px)
    flex-row()
    
    width 80%
    margin 0 auto
    
  &__item
    display inline-block
    
    text-align center
    padding 2em 0
    
    & a
      position relative
    
      font-size $h4
      color $white
      text-decoration none
      text-transform uppercase
      
      cursor pointer
      
      &:hover
        &::after
          height 5px
          opacity 1
          transform translateY(5px)
      
      &::after
        position absolute
        content ''
        
        top 100%
        left 0
        
        width 100%
        height 1px
        
        background $white
        opacity 0
        
        transform translateY(-10px)
        transition height .3s, opacity .3s, transform .3s 
        
.main-nav
  position relative
  
  &__icon
    display inline-block
    position absolute
    
    top 2%
    right 2%
    
    @media screen and (min-width: 768px)
      display none