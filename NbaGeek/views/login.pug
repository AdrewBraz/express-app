extends ./partials/_layout.pug

block content   
  include ./partials/_nav.pug
  section.login
    .login__container
      h2.login__header Log in
      form.login__form(method = "POST" action = "/login")
        div.login-form__inputs
          input(type = 'email', name = "email", placeholder = 'Email')
          input(type = 'password', name = "password", placeholder = 'Password')
        .form__btn-wrap
          button(class = "form__btn"  type="submit") submit
    