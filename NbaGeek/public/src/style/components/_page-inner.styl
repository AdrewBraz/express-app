.page-inner
  
  margin-top 10em
  
  &__title
    text-align center
    
    font-size $h1*2
    text-transform uppercase
    color $white
    
  &__text
    text-align center
    margin-bottom 1em
    
    font-size $h3
    color $white
    
  
  &__container
    container()
   
#team
  display block
  
  margin-bottom 5em
  text-align center
  
  color $white
  font-size $h2
  

#instafeed,
#newsfeed,
#statsfeed
  flex-row()
  flex-wrap wrap;
  
  container()
  
.instagram
  &__link
    margin-bottom 2em
    
    @media screen and (min-width: 768px)
      margin-bottom 3em
    
  &__img
    width 100%
    
    @media screen and (min-width: 1024px)
      width 13em
      height 13em
      
    @media screen and (min-width: 1440px)
      width 15em
      height 15em
