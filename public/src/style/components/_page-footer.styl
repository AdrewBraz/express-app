.page-footer
  margin-top 5em
  margin-bottom 5em
  
  &__socials
    flex-row()
    padding 0
    width 100%
    margin 0 auto
    
    list-style none

    @media screen and (min-width: 768px)
      width 80%
      
    @media screen and (min-width: 1024px)  
      width 35em
      
    @media screen and (min-width: 1440px)
      width 45em
      
  &__socials-item
    cursor pointer
    
    & a
      display block
      position relative
    
      width 3em
      height 3em
      border-radius 50%
      
      background $bg
    
.socials-icon
  position absolute
  display  inline-block
  
  top 50%
  left 50%
  
  margin-top -1em
  margin-left -1em